                </label>
            </div>
        </div>
    </div>
    <script src="./js/sweetalert2 .js" ></script>
    <script>

        document.addEventListener('DOMContentLoaded', function () {
            const btnShowSweetAlert = document.querySelector('#btn-show-sweetalert');
            btnShowSweetAlert.addEventListener('click', function () {
                // Desabilita o botão para evitar múltiplos cliques
                btnShowSweetAlert.disabled = true;

                Swal.fire({
                    title: "Enviar Email",
                    input: 'email',
                    inputPlaceholder: 'Digite seu email',
                    showCancelButton: true,
                    confirmButtonText: 'Enviar',
                    cancelButtonText: 'Cancelar',
                    preConfirm: (email) => {
                        if (!email) {
                            Swal.showValidationMessage('Por favor, digite um email válido');
                        }
                        return email;
                    }
                }).then((result) => {
                    if (result.isConfirmed) {
                        const email = result.value;
                        // Simule o envio de email (você pode substituir por sua lógica real de envio de email)
                        Swal.fire({
                            title: 'Email Enviado!',
                            text: `Email: ${email}`,
                            icon: 'success'
                        });
                    }
                    // Reabilita o botão após o SweetAlert ser fechado
                    btnShowSweetAlert.disabled = false;
                });
            });
        });






        function RedirecionaPg() {
            debugger
            let email = document.getElementById("FORM_CADASTRO").elements["Email"].value;
            let senha = document.getElementById("FORM_CADASTRO").elements["Senha"].value;

            let formData = {
                Email: email,
                Senha: senha
            };

            $.ajax({
                url: "/Usuario/CadastroUsuario", 
                type: "POST",
                data: formData,
                dataType: "json",
                success: function (data) {
                    console.log("Dados enviados com sucesso!");
                },
                error: function () {
                    console.log("Erro ao enviar dados!");
                }
            });
        }

         
        

    </script>
