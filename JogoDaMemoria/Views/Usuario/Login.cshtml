    }

    .login-principal {
        width: 490px;
        display: flex;
        flex-direction: column;
    }

    .log-button {
        padding: 14px;
        width: 65%;
        border-radius: 3px;
        background-color: white;
        border: solid 1px #e4e4e4;
        border: hidden;
        background-color: #090963;
        color: white;
        font-size: 1.7vh;
    }

    .login-layout {
        display: flex;
        align-items: center;
        justify-content: center;
        height: auto;
    }

    .linha {
